include partials/head
include partials/header
include partials/layout
include partials/more
include partials/footer
include partials/body-end


doctype html
html(lang="de")
  head
    title #{pageTitle} | Das Filter
    meta(name="description", content=pageDescription)

    meta(property="og:title", content=pageTitle)
    meta(property="og:description", content=pageDescription)
    meta(property="og:url", content=urls.full())
    meta(property="og:type", content="website")
    meta(property="og:image", content=urls.asset('images/df_logo_3d.jpg'))

    link(href=urls.rss() rel="alternate" type="application/rss+xml" title="Das Filter RSS feed")

    +head

  body.chrono-page(class=pageType)
    +header(classifications, headerTitle, headerTitleUrl)
    .wrapper
      +header-categories(classifications, classification)

      if mainTitle
        header.meta-title-wrapper
          .meta-title
            h1= mainTitle
      main
        +layout(layout)
        +more(nextDate)

      +footer(classifications, classification)
    +body-end

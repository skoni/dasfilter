mixin footer(classifications, cls, isStartPage)
  footer#footer
    .footer-lists-wrapper
      .footer-list-group
        .footer-list
          h4 Kategorien
          ul
            each item in classifications.categories
              li
                - var active = (cls && cls._id === item._id) ? 'active' : ''
                a(class=active, href=urls.classification(item))= item.title

        .footer-list
          h4 Sammlungen
          ul
            each item in classifications.collections
              li
                - var active = (cls && cls._id === item._id) ? 'active' : ''
                a(class=active, href=urls.classification(item))= item.title

      .footer-list-group.right
        .footer-list

mixin cls-list(items, cls)
   ul
     each item in items
       li
         - var active = (cls && cls._id === item._id) ? 'active' : ''
         a(class=active, href=urls.classification(item))= item.title

mixin header(classifications, cls, tag)
  header(id="menu-bar", class="#{headerClass}")
    nav(id="nav-bar")
      a.menu-btn(href="#nav-drawer", title="Menu")
      .inner-bar
        a.logo(href=urls.start(), title="Startseite")

        if cls
          a.cls(href=urls.classification(cls), title=cls.title)= cls.title
        if tag
          a.cls(href=urls.tag(tag), title=tag.name)= tag.name

        a.social-link.google-plus(href="https://plus.google.com/106616903211116456553", rel="publisher", target="_blank", title="Das Filter auf Google+")
        a.social-link.facebook(href="https://facebook.com/dasfilter", title="Das Filter auf Facebook")
        a.social-link.twitter(href="https://twitter.com/dasfilter", title="Das Filter auf Twitter")

  nav(id="off-canvas-menu")
    .off-canvas-inner
      h4 Kategorien
      +cls-list(classifications.categories, cls)

      h4 Sammlungen
      +cls-list(classifications.collections, cls)

  div(id='content-cloak')



mixin cls-list(items, cls)
   ul
     each item in items
       li
         - var active = (cls && cls._id === item._id) ? 'active' : ''
         a(class=active, href=urls.classification(item))= item.title

mixin header(classifications, cls, tag)
  header(id="header", class="#{headerClass}")
    nav(id="nav-bar")
      a.drawer-btn(href="#nav-drawer", title="Menu")
      .main-nav-outer
        .main-nav-inner
          a.header-logo(href=urls.start(), title="Startseite")

          if cls
            a.header-cls(href=urls.classification(cls), title=cls.title)= cls.title
          if tag
            a.header-cls(href=urls.tag(tag), title=tag.name)= tag.name

          a.header-social.google-plus(href="https://plus.google.com/106616903211116456553", rel="publisher", target="_blank", title="Das Filter auf Google+")
          a.header-social.facebook(href="https://facebook.com/dasfilter", title="Das Filter auf Facebook")
          a.header-social.twitter(href="https://twitter.com/dasfilter", title="Das Filter auf Twitter")

    nav(id="nav-drawer")
      .drawer-inner
        h4 Kategorien
        +cls-list(classifications.categories, cls)

        h4 Sammlungen
        +cls-list(classifications.collections, cls)

  div(id='header-cloak')


mixin header-categories(classifications, cls)
  .cls-nav-wrapper
    nav.cls-nav
      ul
        each item in classifications.categories
          li
            - var active = (cls && cls._id === item._id) ? 'active' : ''
            a(class=active, href=urls.classification(item))= item.title
